<nav class="breadcrumb">
    <span class="breadcrumb-item active">Home</span>
</nav>

<div class="container">
    <div class="row justify-content-end">
        <h5>Overall Projects {{project_count}}</h5>
    </div>
    <div>
      {{#each projects as |project|}}
        <h5>{{project.title}}</h5>
		<p>{{project.owner}}</p>
		<div class="id-tile">
		  <div style="width: 60px; background-color: {{project.colors.x0}}"></div>
		  <div style="background-color: {{project.colors.x1}}; left: 20px"></div>
		  <div style="width: 60px; background-color: {{project.colors.x2}}; top: 20px"></div>
		  <div style="background-color: {{project.colors.x3}}; left: 20px; top: 20px"></div>
		  <div style="width: 60px; background-color: {{project.colors.x4}}; top: 40px"></div>
		  <div style="background-color: {{project.colors.x5}}; left: 20px; top: 40px"></div>
		  <div style="background-color: {{project.colors.x6}}; left: 40px; top: 40px"></div>
		</div>
      {{/each}}
    </div>
</div>

<div class="row mt-3">
    {{#each data}}
        <div class="col-sm-4">
            <a class="card mt-3" style="width: 20rem;color: #333;text-decoration : none" href="/{{address}}/detail">
                <div class="card-block">
                    <h4 class="card-title">{{title}}</h4>
                    <p class="card-text">{{description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Stage &nbsp;<span class="badge badge-primary">{{stage}}</li>
                    <li class="list-group-item">Current Funding:&nbsp;{{currentFunding}}</li>
                    <li class="list-group-item">Required Funding:&nbsp;{{fundingGoal}}</li>
                    {{#if fundingGoalReached}}
                        <li class="list-group-item">Funding &nbsp; <span class="badge badge-success">SUCCESSFULLY</span></li>
                    {{else}}
                        <li class="list-group-item">Funding &nbsp; <span class="badge badge-success">PENDING</span></li>
                    {{/if}}
                </ul>
            </a>
        </div>
    {{/each}}
</div>

