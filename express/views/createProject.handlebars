{{#if success}}

    <div style="margin-top:50px;" class="row justify-content-center mt-50">
        <div class="col-xl-10">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Create Project</div>
            </div>
            <div class="card-block">

                <div style="display:none" id="create-alert" class="alert alert-danger col-sm-12"></div>

                <form method="post" action="/myprojects/addProject" class="form-horizontal" role="form">

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Title</label>
                        <div class="col-10">
                            <input class="form-control" type="text" name="title" placeholder="Project Title" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Description</label>
                        <div class="col-10">
                            <textarea class="form-control"  rows="3" name="description" placeholder="Project Description" required ></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Funding Goal</label>
                        <div class="col-10">
                            <input class="form-control" type="number"  name="fundinggoal" placeholder="Project Funding Goal" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
    </div>
{{/if}}