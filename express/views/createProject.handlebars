{{#if success}}
    <div class="container">
        <div id="createbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="card" >
                <div class="card-header">
                    <div class="card-title">Create Project</div>
                </div>

                <div style="padding-top:30px" class="card-block" >

                    <div style="display:none" id="create-alert" class="alert alert-danger col-sm-12"></div>

                    <form method="post" action="/myprojects/addProject" class="form-horizontal" role="form">

                        <div class="form-group">
                        <div style="margin-bottom: 25px" class="input-group">
                            <label>Title</label>
                            <input id="title" type="text" class="form-control" name="title" value="" placeholder="title" required>
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <label>Description</label>
                            <input id="description" type="text" class="form-control" name="description" value="" placeholder="Description" required>
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <label>Funding Goal</label>
                            <input id="fundinggoal" type="text" class="form-control" name="fundinggoal" value="" placeholder="set funding goal" required>
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <input id="btn-login" type="submit" href="#" class="btn btn-success"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/if}}